<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius_sandbox_core.controller.frontend.main.class">Sylius\Sandbox\Bundle\CoreBundle\Controller\Frontend\MainController</parameter>
        <parameter key="sylius_sandbox_core.controller.frontend.security.class">Sylius\Sandbox\Bundle\CoreBundle\Controller\Frontend\SecurityController</parameter>
        <parameter key="sylius_sandbox_core.controller.backend.main.class">Sylius\Sandbox\Bundle\CoreBundle\Controller\Backend\MainController</parameter>

        <parameter key="sylius_sandbox_cart.operator.class">Sylius\Sandbox\Bundle\CoreBundle\Operator\CartOperator</parameter>
        <parameter key="sylius_sandbox_cart.resolver.class">Sylius\Sandbox\Bundle\CoreBundle\Resolver\ItemResolver</parameter>

        <parameter key="sylius_sandbox_sales.processor.operation.process.class">Sylius\Sandbox\Bundle\CoreBundle\Processor\Operation\ProcessOperation</parameter>
        <parameter key="sylius_sandbox_sales.process.checkout.class">Sylius\Sandbox\Bundle\CoreBundle\Process\Scenario\CheckoutProcessScenario</parameter>
    </parameters>

    <services>
        <service id="sylius_sandbox_core.controller.frontend.main" class="%sylius_sandbox_core.controller.frontend.main.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="sylius_sandbox_core.controller.frontend.security" class="%sylius_sandbox_core.controller.frontend.security.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="sylius_sandbox_core.controller.backend.main" class="%sylius_sandbox_core.controller.backend.main.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="sylius_sandbox_assortment.form.type.category" class="Sylius\Sandbox\Bundle\CoreBundle\Form\Type\CategoryType">
            <tag name="form.type" alias="sylius_sandbox_assortment_category" />
        </service>

        <service id="sylius_sandbox_cart.operator" class="%sylius_sandbox_cart.operator.class%">
            <argument type="service" id="sylius_cart.manager.cart" />
        </service>
        <service id="sylius_sandbox_cart.resolver" class="%sylius_sandbox_cart.resolver.class%">
            <argument type="service" id="sylius_cart.manager.item" />
            <argument type="service" id="sylius_assortment.manager.product" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="sylius_inventory.resolver" />
        </service>

        <service id="sylius_sandbox_sales.processor.operation.process" class="%sylius_sandbox_sales.processor.operation.process.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="sylius_sales.operation" alias="process" />
        </service>

        <service id="sylius_sandbox_sales.process.checkout" class="%sylius_sandbox_sales.process.checkout.class%">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="sylius_flow.scenario" alias="sylius_sandbox_checkout" />
        </service>
    </services>

</container>
