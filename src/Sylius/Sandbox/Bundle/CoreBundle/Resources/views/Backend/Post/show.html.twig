{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Post details</h1>
{% endblock %}

{% block content %}
<div class="well">
<a href="{{ path('sylius_sandbox_backend_post_edit', {'id': post.id}) }}" class="btn">
    <i class="icon-pencil"></i> edit
</a>
<a href="{{ path('sylius_sandbox_backend_post_delete', {'id': post.id}) }}" class="btn btn-danger confirmer"
    data-toggle="modal"
    data-target="confirmer-modal"
    data-confirmer-question="Are you sure you want to delete this post?"
>
    <i class="icon-remove icon-white"></i> delete
</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#id</th>
            <th>title</th>
            <th>author</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.title }}</td>
            <td>{{ post.author }}</td>
        </tr>
    </tbody>
</table>

<div class="well">
{{ post.content|markdown }}
</div>

{% endblock %}
